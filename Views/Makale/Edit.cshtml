@model Blog.Models.Makale

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <br />




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.KullaniciAd, "Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.KullaniciAd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KullaniciAd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Baslik, "Başlık", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Resim, "Resim", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Resim, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Aciklama, "Açıklama", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.YayinTarih, "Tarih", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.YayinTarih, new { htmlAttributes = new { @class = "form-control", @Value = Model.YayinTarih.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.YayinTarih, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center;display:none">
                @Html.LabelFor(model => model.Goruntulenme, "Görüntülenme", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Goruntulenme, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Goruntulenme, "", new { @class = "text-danger" })
                </div>
            </div>

            @if (this.User.IsInRole("admin"))
            {
                <div class="row mb-3" style="text-align:center">
                    @Html.LabelFor(model => model.Onay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-1">
                        <div class="form-check">
                            @Html.CheckBoxFor(model => model.Onay, new { @class = "form-check-input" })
                            @Html.ValidationMessageFor(model => model.Onay, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row mb-3" style="text-align:center;display:none">
                    @Html.LabelFor(model => model.Onay, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-1">
                        <div class="form-check">
                            @Html.CheckBoxFor(model => model.Onay, new { @class = "form-check-input" })
                            @Html.ValidationMessageFor(model => model.Onay, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.KategoriId, "Kategori Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownList("KategoriId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row mb-3" style="text-align:center">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Güncelle</button>
                    <a href="/Makale/Index" class="btn btn-outline-warning"><i class="bi bi-file-earmark"></i> Makale Listesi</a>
                </div>
            </div>
        </div>
    }
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
